<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:label="New Post"
    tools:context="pennapps2015.mealshare.Submit">


    <TextView android:text="Select a category:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCat" />



    <Spinner
        android:layout_width="wrap_content"
        android:entries="@array/Category"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:clickable="false"
        android:layout_below="@+id/txtCat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you sharing?"
        android:id="@+id/txtSharing"
        android:layout_below="@+id/spinner"
        android:layout_toRightOf="@+id/txtCat"
        android:layout_toEndOf="@+id/txtCat" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inSharing"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txtSharing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where?"
        android:id="@+id/txtWhere"
        android:layout_above="@+id/inWhere"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inWhere"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/btnSend"
        android:layout_alignRight="@+id/inSharing"
        android:layout_alignEnd="@+id/inSharing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
